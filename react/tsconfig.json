{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "lib": ["es2018", "dom"],
        "noUnusedLocals": false,
        "typeRoots": ["./node_modules/@types", "./typings"],
        "importHelpers": true,
        "skipLibCheck": true,
        "baseUrl": "./app",
        "rootDir": "./app",
        "jsx": "react",
        "outDir": "./dist",
        "paths": {
            "~/*": ["./*"]
        }
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}
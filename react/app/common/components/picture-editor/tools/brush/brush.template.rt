<rt-import name="Fragment" from="react" />
<Fragment rt-scope="this.state as state">
    <div class="tool button" rt-class="{ active: state.active }" onClick="{() => this.setActive()}">
		<span class="icon-brush">
			<span rt-if="state.active" class="icon-brush-half"></span>
		</span>
	</div>
</Fragment>